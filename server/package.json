{
  "name": "beatbattles-server",
  "version": "1.0.0",
  "description": "Server for BeatBattles multiplayer music game",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "test": "set NODE_OPTIONS=--max-old-space-size=4096 && jest --maxWorkers=1",
    "test:watch": "set NODE_OPTIONS=--max-old-space-size=4096 && jest --watch",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "music",
    "game",
    "multiplayer",
    "socket.io"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^1.4.36",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.7.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 